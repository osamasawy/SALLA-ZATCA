{
    "name": "osamasawy/salla-zatca",
    "description": "A helper to generate the QR code and sign it for ZATCA e-invoicing",
    "type": "library",
    "keywords": [
        "ZATCA",
        "e-invoicing",
        "salla",
        "qr-code"
    ],
    "homepage": "https://github.com/osamasawy/SALLA-ZATCA",
    "license": "MIT",
    "authors": [
        {
            "name": "Osama Sawy (Forked from Salla)",
            "email": "osama@example.com",
            "homepage": "https://github.com/osamasawy"
        }
    ],
    "support": {
        "issues": "https://github.com/osamasawy/SALLA-ZATCA/issues",
        "source": "https://github.com/osamasawy/SALLA-ZATCA"
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.0",
        "ext-mbstring": "*",
        "ext-dom": "*",
        "robrichards/xmlseclibs": "^3.1",
        "josemmo/uxml": "^0.1.4",
        "chillerlan/php-qrcode": "^4.3",
        "phpseclib/phpseclib": "~3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~8.0"
    },
    "autoload": {
        "psr-4": {
            "Salla\\ZATCA\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Salla\\ZATCA\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit"
